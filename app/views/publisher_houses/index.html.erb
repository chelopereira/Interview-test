<p id="notice"><%= notice %></p>

<div class="container text-center">

  <h1>Publisher Houses</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @publisher_houses.each do |publisher_house| %>
        <tr>
          <td><%= publisher_house.name %></td>
          <td><%= link_to 'Show', publisher_house %></td>
          <td><%= link_to 'Edit', edit_publisher_house_path(publisher_house) %></td>
          <td><%= link_to 'Destroy', publisher_house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <button class="btn">
  <%= link_to 'New Publisher House', new_publisher_house_path %>
  </button>
</div>